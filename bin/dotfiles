#!/usr/bin/env zsh

set -e

PIPEFILE=/tmp/pipe0
LOGFILE=/tmp/log.txt

rm -f ${PIPEFILE}
mkfifo ${PIPEFILE}
tee ${LOGFILE} < ${PIPEFILE} &

command="${1}"

# Shift the first argument off, as we are using that.
shift

case "${command}" in
  "install")
    package="${1}"
    echo "ðŸš€ Installing package: ${package}"
    cd "${DOTFILES_LOCATION}/${package}" \
        && ./install.sh > ${PIPEFILE} 2>&1
    ;;
  "install_silent")
    package="${1}"
    echo "ðŸš€ Installing package: ${package}"
    (cd "${DOTFILES_LOCATION}/${package}" \
        && ./install.sh > ${PIPEFILE} 2>&1)
    ;;
  *)
    echo "${command} does not exist"
  exit 1
    ;;
esac

rm -f ${PIPEFILE}
